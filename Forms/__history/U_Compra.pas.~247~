procedure TCompraF.btnFormaPgtoClick(Sender: TObject);
begin
  Pesq_Forma_Pgto_CompraF := TPesq_Forma_Pgto_CompraF.Create(Self);
  Pesq_Forma_Pgto_CompraF.ShowModal;

  try
    //
  finally
    Pesq_Forma_Pgto_CompraF.Free;
    Pesq_Forma_Pgto_CompraF := Nil;
  end;
end;

